public class Main
{
	public static void pattern1(int a) 
	{
	    int i, j;
	    for(i=0; i<a; i++){
	        for(j=2*(a-i); j>=0; j--){
	            System.out.print(" ");
	        }
	        for(j=0; j<=i; j++)
	        {
	            System.out.print("> ");
	        }
	    
	        System.out.println();
	    }
		
	}

    public static void main(String args[])
    {
        int a = 6;
        pattern1(a);
    }
}
